@model GymManager.Web.Models.MemberViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
}
@section Scripts{
        <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>
        <script src="~/views/membershipTypes/create.js"></script>

}

<div class="container">

    <div class="row">
        <div class="col-6">
            <h3 class="mt-5">Membership Renewal</h3>

        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-info float-end">Back</a>
        </div>
    </div>

    <br>

    
    <form asp-action="Edit">

        <div class="mb-3">
            <label asp-for="Id" class="form-label">Id</label>
            <input type="number" asp-for="Id" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">First Name</label>
            <input type="text" asp-for="Name" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="BirthDay" class="form-label">BirthDay</label>
            <input type="text" asp-for="BirthDay" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="CityId" class="form-label">City</label>
            <select class="form-control" asp-for="CityId" readonly>
                <option value="1">Michoacan</option>
                <option value="2">Tijuana</option>
                <option value="3">Ciudad de Mexico</option>
            </select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" readonly>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="AllowNesLetter" readonly />
            <label class="form-check-label" asp-for="AllowNesLetter">Suscribe to our newsLetter?</label>
           
        </div>

        <div class="mb-3">
            <label asp-for="MembershipId" class="form-label">Membership</label>
            <select class="form-control" asp-for="MembershipId">
                <option value="1">Basic</option>
                <option value="2">Gold</option>
                <option value="3">Premium</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </form>
   
</div>

